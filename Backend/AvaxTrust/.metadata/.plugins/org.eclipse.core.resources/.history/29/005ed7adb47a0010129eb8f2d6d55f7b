package com.avax.service;

import java.lang.foreign.Linker.Option;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.avax.bean.User;
import com.avax.exception.ResourseNotCreateException;
import com.avax.repository.UserRespository;
@Service
public class UserService {
	
	@Autowired
	private UserRespository respository;
	
	public User addUser(User user) {
		Optional<User> usersOptional=respository.findById(user.getProvider());
		if(usersOptional!=null) {
			throw new  ResourseNotCreateException("Candidate with username:"+user.getProvider()+"Already Exist");
		}
		return respository.save(user);
	}

}
