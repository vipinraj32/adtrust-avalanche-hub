package com.avax.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.security.oauth2.client.authentication.OAuth2AuthenticationToken;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.avax.bean.User;
import com.avax.service.UserService;
@RestController
@CrossOrigin
@RequestMapping("/api/user")
public class UserController {
	
	@Autowired
	private UserService service;
	
	@GetMapping("/login/success")
    public ResponseEntity<User> getUserInfo(OAuth2AuthenticationToken authentication) {
        Map<String, Object> attributes = authentication.getPrincipal().getAttributes();
        String provider = authentication.getAuthorizedClientRegistrationId(); 
        String providerId = attributes.get("id").toString();
           User user = new User();
            user.setProvider(provider);
            user.setProviderId(providerId);
            user.setName((String) attributes.get("name"));
            user.setEmail((String) attributes.getOrDefault("email", ""));
            service.addUser(user);
        return ResponseEntity.ok(user);
    }
}

}
